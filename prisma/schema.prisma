generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleEnum {
  User
  Admin
}

model User {
  id            String     @id @default(cuid())
  name          String
  email         String     @unique
  password      String
  bio           String?
  profilePhoto  String?
  locations     Location[]
  isAdult       Boolean    @default(false)
  role          RoleEnum   @default(User)
  createdTopics Topic[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Location {
  id        String   @id @default(cuid())
  lat       Float
  lon       Float
  city      String
  state     String?
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Topic {
  id        String   @id @default(cuid())
  name      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
